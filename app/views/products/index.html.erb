<% provide(:title, 'Products') %>

<h3 class="text-center">Products for Sale</h3>

<% if current_user.try(:admin?) && !current_user?(@user)  %>
  <p class="text-center"><%= link_to "Add new product", new_product_path, class: 'btn btn-danger' %>  </p>
<% end %>

<%= form_tag(search2_path, id: "search_form") do %>
  <%= text_field_tag :search2, params[:search2] %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @products.each do |product| %>
      <%= render "product_row", product: product, order_item: @order_item %>
    <% end %>
  </div>
</div>
